        { title: '需求数量', width: 90, dataIndex: 'demandQuantity', key: 'demandQuantity',
          editor: canEdit&&<Input placeholder='请填写数字值' /> },

        { title: '单价(除税)(元)', width: 135, dataIndex: 'materialData.priceWithTax', key: 'materialData.priceWithTax',
